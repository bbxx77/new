<!-- books_by_title.ejs -->

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bookstore</title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f8f8f8;
            margin: 0;
            padding: 0;
            display: flex;
            flex-direction: column;
            align-items: center;
            min-height: 100vh;
        }

        .navbar {
            background-color: #333;
            color: white;
            padding: 10px;
            width: 100%;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .navbar-links {
            display: flex;
            align-items: center;
        }

        .navbar span {
            margin-left: 50px;
        }

        .navbar-link {
            margin-right: 10px;
            color: white;
            text-decoration: none;
            padding: 10px;
            border-radius: 5px;
            transition: background-color 0.3s;
        }

        .navbar-link:hover {
            background-color: #333;
        }

        .container {
            text-align: center;
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            padding: 20px;
            margin-top: 20px;
        }

        h1 {
            color: #333;
            margin-bottom: 20px;
        }

        .action-links {
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        form {
            margin-bottom: 10px;
        }

        button {
            padding: 15px;
            font-size: 18px;
            cursor: pointer;
            background-color: #333;
            color: white;
            border: none;
            border-radius: 5px;
            transition: background-color 0.3s;
            margin-bottom: 10px; /* Add margin bottom to create space between buttons */
        }

        button:hover {
            background-color: #333;
        }

        .logout-link,
        .home-link {
            background-color: transparent;
            color: white;
            border: 1px solid transparent;
        }

        .logout-link:hover,
        .home-link:hover {
            background-color: #333;
        }

        footer {
            margin-top: auto;
            padding: 15px;
            background-color: #333;
            color: white;
            text-align: center;
            width: 100%;
        }
    </style>
</head>

<body>
    <div class="navbar">
        <span>Welcome User!</span>
        <div class="navbar-links">
            <a href="/login" class="navbar-link logout-link">Logout</a>
            <a href="/history" class="navbar-link logout-link">View Search History</a>
        </div>
    </div>

    <div class="container" style="width: 80%; max-width: 800px; margin: 20px auto; padding: 30px; box-sizing: border-box;">
        <h1 style="color: #333; margin-bottom: 20px;">Explore Books by Title</h1>
        <form method="post" action="/api/books_by_title">
            <label for="bookTitle">Enter Book Title:</label>
            <input type="text" id="bookTitle" name="bookTitle" required>
            <button type="submit">Search</button>
        </form>
        
        <% if (books && books.length > 0) { %>
            <div>
                <% books.forEach(book => { %>
                    <h2><%= book.title %></h2>
                    <!-- Add other book details as needed -->
                <% }); %>
            </div>
        <% } else if (books && books.length === 0) { %>
            <p>No books found for the given title.</p>
        <% } else { %>
            <p>Error: Books variable is not defined.</p>
        <% } %>
    </div>

    <footer style="margin-top: auto; padding: 15px; background-color: #333; color: white; text-align: center; width: 100%;">
        <p style="margin: 0;">Created by Balzhan, SE-2206</p>
    </footer>
</body>
</html>