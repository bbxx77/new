<body>
    <div class="navbar">
        <span>Welcome User!</span>
        <div class="navbar-links">
            <a href="api/books_by_title" class="navbar-link logout-link">Books by title</a>
            <a href="api/books_by_author" class="navbar-link logout-link">Books by author</a>
            <a href="api/books_by_title" class="navbar-link logout-link">QUIZ(bonus)</a>
            <a href="/history" class="navbar-link logout-link">View Search History</a>
            <a href="/logout" class="navbar-link logout-link">Logout</a>
        </div>
    </div>
    <h1>The winner of the month</h1>
    <div class="container">

        <div class="row">
            <% books.forEach(book => { %>
                <div class="col-md-4">
                    <div class="card mb-4">
                        <div id="carousel<%= book._id %>" class="carousel slide" data-ride="carousel">
                            <ol class="carousel-indicators">
                                <% for (let i = 0; i < book.images.length; i++) { %>
                                    <li data-target="#carousel<%= book._id %>" data-slide-to="<%= i %>" <% if (i === 0) { %>class="active"<% } %>></li>
                                <% } %>
                            </ol>
                            <div class="carousel-inner">
                                <% book.images.forEach((image, index) => { %>
                                    <div class="carousel-item <% if (index === 0) { %>active<% } %>">
                                        <img src="<%= image %>" class="d-block w-100" alt="Course Image">
                                    </div>
                                <% }); %>
                            </div>
                            <a class="carousel-control-prev" href="#carousel<%= book._id %>" role="button" data-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="sr-only">Previous</span>
                            </a>
                            <a class="carousel-control-next" href="#carousel<%= book._id %>" role="button" data-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="sr-only">Next</span>
                            </a>
                        </div>
                        <div class="card-body">
                                <h5 class="card-title"><%= book.names[0].name %></h5>
                                <p class="card-text"><%= book.descriptions[0].description %></p>
                        </div>
                    </div>
                </div>
            <% }); %>
       
    </div>
